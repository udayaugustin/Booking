<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BookingManager.Views.AddBooking"
             Title="Booking">
    <NavigationPage.TitleView>
        <Label Text="Booking" Style="{StaticResource NavigationTitle}"/>
    </NavigationPage.TitleView>
    <ScrollView>
        <StackLayout Spacing="10">
            <Entry Placeholder="Name" x:Name="Name"/>
            <Entry Placeholder="Phone No" Keyboard="Telephone" x:Name="PhoneNo"/>
            <StackLayout>
                <Label Text="Checkin Date"/>
                <DatePicker x:Name="CheckInDate"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Checkout Date"/>
                <DatePicker x:Name="CheckOutDate"/>
            </StackLayout>
            <Entry Placeholder="Total Booking Cost" Keyboard="Numeric" x:Name="TotalBookingCost"/>
            <Entry Placeholder="Advance Amount" Keyboard="Numeric" x:Name="AdvanceAmount"/>
            <Entry Placeholder="Mode of Payment" Keyboard="Text" x:Name="PaymentMode"/>
            <Button Text="Add" Clicked="Add"/>
        </StackLayout>
        </ScrollView>

</ContentPage>
