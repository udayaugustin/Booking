<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookingManager.Views.BookingDetail" Title="Booking Details">
    <StackLayout>
        <StackLayout Spacing="10">
            <Label Text="Guest Name"/>
            <Label  x:Name="Name"/>
            <Label Text="Contact Number"/>
            <Label  x:Name="PhoneNo"/>
            <StackLayout>
                <Label Text="Checkin Date"/>
                <Label x:Name="CheckInDate"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Checkout Date"/>
                <Label x:Name="CheckOutDate"/>
            </StackLayout>
            <Label Text="Booking cost"/>
            <Label x:Name="TotalBookingCost"/>
            <Label Text="Advance Amount"/>
            <Label x:Name="AdvanceAmount"/>
            <Label Text="Mode of Payment" />
            <Label x:Name="PaymentMode"/>
            
        </StackLayout>
    </StackLayout>
</ContentPage>